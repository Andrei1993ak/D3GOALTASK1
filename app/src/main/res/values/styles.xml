<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/BoldTextTextViewStyle</item>
        <item name="android:buttonStyle">@style/AccentedButton</item>
    </style>

    <style name="BoldTextTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccentedButton" parent="android:Widget.Button">
        <item name="android:background">@color/colorAccent</item>
    </style>
</resources>
